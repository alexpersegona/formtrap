# App Config
PUBLIC_APP_NAME=SvelteKit

# Database
DATABASE_URL="postgres://postgres:@localhost:5432/sveltekit"

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Better Auth
# Generate a random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here-generate-a-random-string
# Server-side URL (used by auth.ts)
BETTER_AUTH_URL=http://localhost:5173
# Client-side URL (exposed to browser, must have VITE_ prefix)
VITE_BETTER_AUTH_URL=http://localhost:5173
# Require email verification before accessing protected routes (true/false)
REQUIRE_EMAIL_VERIFICATION=true

# Mailgun (for password reset emails)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com
MAILGUN_FROM_EMAIL=noreply@your-domain.com
MAILGUN_FROM_NAME=Your App Name

# Form Submission Endpoint
# Local: http://localhost:8080
# Production: https://submission.formtrap.io
PUBLIC_SUBMISSION_ENDPOINT=http://localhost:8080
